<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moment1</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Moment1.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <a class="logo-link" asp-area="" asp-page="/Index"><img class="logo" src="../../images/placeholder logo.svg"
                alt=""></a>
        <div class="today-date">
            <p>Dagens datum är: @DateTime.Now.ToString("yyyy/MM/dd")</p>
        </div>
    </header>

    <aside>
        <nav>
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Start</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Razor">Razor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/About">Om sidan</a>
                </li>
            </ul>
        </nav>
    </aside>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer>
        <div>
            <p>Av Calle Alexanderson - Kontakta mig via e-post: <a
                    href="mailto:caal2301@student.miun.se">caal2301@@student.miun.se</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
